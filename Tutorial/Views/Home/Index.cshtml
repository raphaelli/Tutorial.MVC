@model Tutorial.Model.DTO.HomeDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/node_modules/layui-src/dist/layui.js"></script>
<link href="~/node_modules/layui-src/dist/css/layui.css" rel="stylesheet" />
<script src="~/node_modules/jquery/dist/jquery.min.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <ul>
        @foreach (var a in Model.Students)
        {
            <li>
                @a.Id - @a.Name (@a.Age)
                <a asp-action="Detail" asp-route-id="@a.Id">明细</a>
            </li>
        }
    </ul>

    <div>
        <a asp-action="Create" class="layui-btn">添加</a>
    </div>

</body>
</html>
