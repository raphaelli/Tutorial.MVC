@model Tutorial.Model.DTO.HomeDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <ul>
        @foreach (var a in Model.Students)
        {
            <li>
                @a.Id - @a.Name (@a.Age)
                <a asp-action="Detail" asp-route-id="@a.Id">明细</a>
            </li>
        }
    </ul>

    <div>
        <a asp-action="Create">添加</a>
    </div>

</body>
</html>
